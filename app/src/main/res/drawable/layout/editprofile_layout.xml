<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<View
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/view_gradient"/>

    <View
        android:id="@+id/viewprofile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/view_gradient"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/imgedit"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/img_person"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp">

    </LinearLayout>

    <TextView
        android:id="@+id/nameuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgedit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:text="@string/abdallah_mostafa"
        android:textSize="23sp" />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nameuser"
        android:text="Mansoura, Egypt"
        android:textColor="#FFF"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/privatedetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/private_details"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@id/viewprofile"/>
    <LinearLayout
        android:id="@+id/signupbox"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/editbox"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="12sp"
        android:layout_below="@+id/privatedetails">
        <RelativeLayout
            android:id="@+id/teste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/editemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/e_mail"
            android:textSize="18dp"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>